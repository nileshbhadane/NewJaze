<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="#084B8A" 
                />
            <stroke
                android:width="1dp"
                android:color="#084B8A" />
            <corners
                android:radius="10dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#084B8A"
                android:centerColor="#084B8A"
                android:endColor="#084B8A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="10dp" />
           
        </shape>
        
    
    </item>
</selector>